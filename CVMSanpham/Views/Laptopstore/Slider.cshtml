@model IEnumerable<CVMSanpham.Models.Slider>
<div class="slider-area  plr-185  mb-80">
<div class="container-fluid">
<div class="slider-content">
    <div class="row">
        <div class="active-slider-1 slick-arrow-1 slick-dots-1">
        @foreach (var Slider in Model)
        {
            <!-- START SLIDER AREA -->

            
            <!-- layer-1 Start -->
            <div class="col-md-12">
                <div class="layer-1">
                    <div class="slider-img">
                        <img src="~/images/@Slider.UrlHinh" width=200 />
                    </div>
                    <div class="slider-info gray-bg">
                        <div class="slider-info-inner">
                            <h1 style="color: #1792ec">@Slider.Title</h1>
                            <h3 style="color: #00c2ff">@Slider.Tenhinh</h3>
                            <div class="slider-brief text-black-2">
                                <p>@Slider.review</p>
                            </div>
                            <a href="@Slider.LinkUrl" class="button extra-small button-black">
                                <span class="text-uppercase">Xem chi tiết</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- layer-1 end -->
          

        }
    </div>
            </div>
        </div>
    </div>
        <!-- END SLIDER AREA -->
    </div>


<!-- END SLIDER AREA -->>


