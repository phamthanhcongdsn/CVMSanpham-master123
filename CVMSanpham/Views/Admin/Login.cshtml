@using System.Web.UI.WebControls

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin - Login</title>

    <!-- Custom fonts for this template-->
    <link href="~/Content/cssadmin/all.min.css" rel="stylesheet" type="text/css">

    <!-- Custom styles for this template-->

    <link href="~/Content/cssadmin/sb-admin.css" rel="stylesheet" />
</head>
<body class="bg-dark">
    <div class="container">
        <div class="card card-login mx-auto mt-5">
            <div class="card-header">Login</div>
            <div class="card-body">
                <h4 style="color: red; text-align: center">@ViewBag.Thongbao</h4>
            @using (Html.BeginForm())
            {
                <form>

                    @Html.ValidationSummary(true)

                    <div class="form-group">

                        <div class="form-label-group">
                            <input type="email" id="inputEmail" class="form-control" placeholder="Địa chỉ" required="required" autofocus="autofocus">
                            <label for="inputEmail">Tên đăng nhập</label>
                            @ViewData["Loi1"]
                        </div>
                        

                    </div>
                    <div class="form-group">

                        <div class="form-label-group">
                            <input type="password" id="inputPassword" class="form-control" placeholder="Password" required="required">
                            <label for="inputPassword">Password</label>
                            @ViewData["Loi2"]
                        </div>
                       

                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" value="remember-me">
                                Remember Password
                            </label>
                        </div>
                    </div>
                    <button type="submit" class="btn">Đăng Nhập</button>

                </form>
            }
                <div class="text-center">
                    <a class="d-block small mt-3" href="register.html">Register an Account</a>
                    <a class="d-block small" href="forgot-password.html">Forgot Password?</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->

    <script src="~/Content/cssadmin/jquery.min.js"></script>

    <script src="~/Content/cssadmin/bootstrap.bundle.min.js"></script>
    <script src="~/Content/cssadmin/jquery.easing.min.js"></script>
    <!-- Core plugin JavaScript-->
  
</body>
</html>
